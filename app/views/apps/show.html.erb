<div class="container">
  <div class="app-card">
    <div class="app d-flex flex-column justify-content mb-3 align-items-center">
      <div class="header d-flex mb-3">
        <%= image_tag "notion.png", width: "130px", height: "130px", crop: :fill %>
        <div class="header-content px-3">
          <div class="name"> <h3 class="fw-bold"> <%= @app.name %> </h3> </div>
          <div class="category"> <p> Category: <%= @app.categories.map(&:name).join(", ") %> </p> </div>
          <div class="upvotes"> <%= @app.total_votes %> votes </div>
        </div>
      </div>
    <div class="description px-2"> <%= @app.description %> </div>
    </div>
  </div>
</div>
