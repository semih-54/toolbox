<div class="card-glass comment">
  <% if comment.user.photo.attached? %>
    <%= link_to profile_path(user_id: comment.user.id) do %>
      <%= cl_image_tag comment.user.photo.key, class: "avatar-squared", width: 25, height: 25, crop: :fill %>
    <% end %>
  <% else %>
    <%= link_to profile_path(user_id: comment.user.id) do %>
      <%= image_tag "avatar_placeholder.jpg", class: "avatar-squared", width: 25, height: 25, crop: :fill  %>
    <% end %>
  <% end %>
  <p class="comment__content"><%= comment.comment.truncate(App::COMMENT_LENGTH) %></p>
  <% if comment.user.vote_of(comment.app)  %>
    <p><%= comment.user.vote_of(comment.app).upvoted? ? "👍" : "👎" %></p>
  <% end %>
</div>
